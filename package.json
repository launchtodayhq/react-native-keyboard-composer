{
  "name": "@launchhq/react-native-keyboard-composer",
  "version": "0.1.3",
  "packageManager": "pnpm@10.26.0",
  "description": "A native keyboard-aware composer component for React Native with smooth keyboard animations",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "default": "./build/index.js"
    }
  },
  "files": [
    "build",
    "android/build.gradle",
    "android/src",
    "ios/*.podspec",
    "ios/*.swift",
    "expo-module.config.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "expo-module build",
    "clean": "expo-module clean",
    "lint": "expo-module lint",
    "test": "expo-module test",
    "prepare": "expo-module prepare",
    "prepack": "pnpm run build",
    "expo-module": "expo-module",
    "open:ios": "xed example/ios",
    "open:android": "open -a \"Android Studio\" example/android"
  },
  "keywords": [
    "react-native",
    "expo",
    "keyboard",
    "composer",
    "keyboard-aware",
    "text-input",
    "chat",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/launchtodayhq/react-native-keyboard-composer.git"
  },
  "bugs": {
    "url": "https://github.com/launchtodayhq/react-native-keyboard-composer/issues"
  },
  "author": "paulmbw <paul@launchtoday.dev> (https://github.com/paulmbw)",
  "license": "MIT",
  "homepage": "https://github.com/launchtodayhq/react-native-keyboard-composer#readme",
  "devDependencies": {
    "@types/react": "~19.1.0",
    "expo": "^54.0.27",
    "expo-modules-core": "^3.0.29",
    "expo-module-scripts": "^5.0.8",
    "react-native": "0.81.5",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "expo": "*",
    "expo-modules-core": "*",
    "react": "*",
    "react-native": "*"
  }
}
